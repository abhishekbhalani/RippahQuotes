<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Rippah Quotes", "Index", "Quotes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("New", "Create", "Quotes")</li>
                    <li>@Html.ActionLink("Topics", "Index", "Topics")</li>
                    <li>@Html.ActionLink("Search", "Index", "Search")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Mods", "Index", "Moderator")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (ViewBag.FirstTime == true)
        {
            <div class="tsandcs">
                <h2>Welcome to Rippah Quotes </h2>
                Please note that the content on this site is not necessarily posted with 
                the consent of the websites administrators and so some quotes may offend 
                users. <br /> If you do not wish to partake in the community with this is mind 
                you can stop here otherwise have fun using Rippah Quotes without the intent 
                of taking any action against the site for unsatisfactory statements <br />
                ~ Alex Billson, Founder of Rippah Quotes. <br />
                (This prompt will disappear when loading a new page)
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Alex Billson, Moose Man, Nick Aldridge, Sol Summers, Calder Wallace, Krepsin Daniels and Andrew Coe</p>
            @if (User.Identity.IsAuthenticated == false)
            {
                @Html.ActionLink("Login", "Login","Account")
            }
            <a href="~/Home/About">Who are Rippah Quotes?</a>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
