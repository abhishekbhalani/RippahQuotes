<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Magnificent Sayings", "Index", "Quotes", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("New", "Create", "Quotes")</li>
                    <li>@Html.ActionLink("Topics", "Index", "Topics")</li>
                    <li>@Html.ActionLink("Search", "Index", "Search")</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Mods", "Index", "Moderator")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @if (ViewBag.FirstTime == true)
        {
            <div class="tsandcs">
                <h2>Welcome to Magnificent Sayings</h2>
                Please note that the content on this site is not necessarily posted with 
                the consent of the websites administrators and so some quotes may offend 
                users. <br /> If you do not wish to partake in the community with this is mind 
                you can stop here otherwise have fun using Magnificent Sayings without the intent 
                of taking any action against the site for unsatisfactory statements <br />
                ~ Alex Billson, Founder of Magnificent Sayings Version 1.0 <br />
                (This prompt will disappear when loading a new page)
            </div>
        }
        @RenderBody()
        <hr />
        <footer>
            <span class="adsbygoogle">
                <script async src="//pagead2.googlesyndication.com/pagead/js/adsbygoogle.js"></script>
                <!-- Grouse Quotations Test -->
                <ins class="adsbygoogle"
                     style="display:block"
                     data-ad-client="ca-pub-6588703269901019"
                     data-ad-slot="9010457936"
                     data-ad-format="auto"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
                </span>
            <p>&copy; @DateTime.Now.Year - Alex Billson, Nick Aldridge and Andrew Coe</p>
            @*@if (User.Identity.IsAuthenticated == false)
            {
                @Html.ActionLink("Login", "Login","Account")
            }*@
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
