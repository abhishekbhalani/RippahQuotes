@model IEnumerable<RippahQuotes.Models.Quotes>
@{
    bool premium = false;
    int page = ViewBag.page;
    if (premium == true)
    {
        ViewBag.Title = "Rippah Quotes Premium"; 
    }
    else { 
        ViewBag.Title = "Rippah Quotes";
    }
}
